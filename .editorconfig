; editorconfig.org

root = true

[*]
charset                     = utf-8
continuation_indent_size    = 4
end_of_line                 = lf
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
max_line_length             = 120
tab_width                   = 4
trim_trailing_whitespace    = true

[*.md]
trim_trailing_whitespace    = false

[{*.md,*.neon,*.yaml,*.yml,*.tf,*.json,*.tpl}]
indent_size                 = 2
indent_style                = space

[{Makefile,Makefile.*,*.mk,justfile,justfile.*,Justfile,Justfile.*,*.just}]
indent_style                = tab

[{*.yaml,*.yml}]
quote_type                  = single
